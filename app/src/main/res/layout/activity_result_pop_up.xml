<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_rectangle"
    tools:context="licence.meme.worrynot.gui.screen.home.ResultPopUpActivity">
    <TextView
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:background="@color/colorAccent"
        android:textColor="#111111"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/title_result_pop_up_activity_tv" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="350dp"
        android:background="@color/colorAccent"
        android:textColor="#111111"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/title_result_pop_up_activity_tv"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/interpretation_result_pop_up_activity_tv"
        app:layout_constraintHorizontal_bias="1.0" />
    <Button
        android:id="@+id/ok_result_pop_up_activity_btn"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="OK"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/interpretation_result_pop_up_activity_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />
</android.support.constraint.ConstraintLayout>
