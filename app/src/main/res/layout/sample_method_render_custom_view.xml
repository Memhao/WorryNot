<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/method_sample_method_cl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView

            android:id="@+id/name_sample_method_tv"
            android:maxLines = "1"
            android:scrollbars = "vertical"
            android:layout_width="205dp"
            android:layout_height="20dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Name"
            android:textColorHint="#AF5910"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            android:background="@drawable/et2"
            />

        <TextView
            android:id="@+id/author_sample_method_tv"
            android:maxLines = "1"
            android:scrollbars = "vertical"
            android:background="@drawable/et2"
            android:layout_width="205dp"
            android:layout_height="20dp"
            android:hint="Author"
            android:textColorHint="#AF5910"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/name_sample_method_tv"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/description_sample_method_tv"
            android:maxLines = "2"
            android:scrollbars = "vertical"
            android:background="@drawable/et2"
            android:layout_width="205dp"
            android:layout_height="40dp"
            android:hint="Description"
            android:textColorHint="#AF5910"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/author_sample_method_tv"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/story_sample_method_tv"
            android:maxLines = "2"
            android:scrollbars = "vertical"
            android:background="@drawable/et2"
            android:layout_width="205dp"
            android:layout_height="40dp"
            android:hint="Story"
            android:textColorHint="#AF5910"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/description_sample_method_tv"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintVertical_bias="0.014" />

        <Button
            android:layout_width="205dp"
            android:layout_height="20dp"
            android:background="@drawable/button0"
            android:text="UP"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/story_sample_method_tv"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/up_sample_method_btn" />
        <TextView
            android:layout_width="205dp"
            android:layout_height="50dp"
            android:background="@drawable/et1"
            android:layout_marginTop="8dp"
            android:textColor="#AF5910"
            app:layout_constraintTop_toBottomOf="@+id/up_sample_method_btn"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/textView" />
        <Button
            android:layout_width="205dp"
            android:layout_height="20dp"
            android:background="@drawable/button0"
            android:text="DOWN"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/down_sample_method_btn"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />
        <TextView
            android:layout_width="205dp"
            android:layout_height="1dp"
            android:background="#111"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/down_sample_method_btn"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintVertical_bias="0.063" />

    </android.support.constraint.ConstraintLayout>
</FrameLayout>
