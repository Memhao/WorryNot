<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_home_id"
    tools:context="licence.meme.worrynot.gui.home.HomeFragment">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_rectangle">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatar_home_fragment_iv"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_account_circle_black_48dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/name_home_fragment_tv"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:text="USER\nLevel 0"
            android:maxLines="2"
            android:textAlignment="center"
            android:ems="10"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/avatar_home_fragment_iv"
            android:layout_marginLeft="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.565" />
        <ProgressBar
            android:id="@+id/experience_bar_home_fragment_pb"
            android:layout_width="0dp"
            android:layout_height="10dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressDrawable="@drawable/m_custom_progressbar"
            app:layout_constraintLeft_toRightOf="@+id/avatar_home_fragment_iv"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/name_home_fragment_tv" />

        <TextView
            android:id="@+id/active_worrynot_home_fragment_tv"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:background="@color/colorAccent"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/experience_bar_home_fragment_pb" />
        <TextView
            android:id="@+id/description_worrynot_home_fragment_tv"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:background="@color/colorAccent"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/active_worrynot_home_fragment_tv" />

        <Button
            android:id="@+id/up_home_fragment_btn"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/description_worrynot_home_fragment_tv" />
        
        <TextView
            android:id="@+id/step_worrynot_fragment_home_tv"
            android:layout_width="0dp"
            android:layout_height="74dp"
            android:layout_marginLeft="16dp"
            android:background="@color/colorAccent"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeMaxTextSize="100sp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/up_home_fragment_btn"
             />

        <Button
            android:id="@+id/down_home_fragment_btn"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/step_worrynot_fragment_home_tv" />

        <Button
            android:id="@+id/evaluate_home_fragment_btn"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginLeft="16dp"
            android:textAlignment="center"
            android:text="Evaluate"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/down_home_fragment_btn" />

        <Button
            android:id="@+id/change_password_home_fragment_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/back_in"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/evaluate_home_fragment_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.47" />
        <Button
            android:id="@+id/log_out_home_framgent_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/pass_in0"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/evaluate_home_fragment_btn"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.47" />
    </android.support.constraint.ConstraintLayout>



</FrameLayout>
