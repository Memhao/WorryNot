<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/background_rectangle"
    tools:context="licence.meme.worrynot.activities.WriteCommentActivity">

   <TextView
       android:layout_width="0dp"
       android:layout_height="36dp"
       android:background="@color/colorPrimaryDark"
       android:textColor="#111111"
       android:gravity="center_vertical"
       android:layout_marginLeft="16dp"
       android:layout_marginRight="16dp"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       android:minLines="3"
       android:text="Please leave me feedback for my method"
       android:textAlignment="center"
       app:layout_constraintHorizontal_bias="0.0"
       app:layout_constraintTop_toTopOf="parent"
       android:layout_marginTop="16dp"
       android:id="@+id/title_write_comment_activity_tv" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        app:counterEnabled="true"
        app:counterMaxLength="350"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/title_write_comment_activity_tv"
        android:background="@color/colorAccent"
        android:id="@+id/comm_container_write_comment_activity_til">
        <EditText
            android:id="@+id/comment_write_comment_activity_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:hint="Comment..."
            android:inputType="textCapSentences|textMultiLine"/>

    </android.support.design.widget.TextInputLayout>
     <Button
         android:id="@+id/submit_comm_write_comment_activity_btn"
         android:layout_width="0dp"
         android:layout_height="36dp"
         android:text="Comment..."
         android:background="@color/colorPrimaryDark"
         android:layout_marginRight="16dp"
         app:layout_constraintRight_toRightOf="parent"
         android:layout_marginLeft="16dp"
         app:layout_constraintLeft_toLeftOf="parent"
         android:layout_marginTop="16dp"
         app:layout_constraintTop_toBottomOf="@+id/comm_container_write_comment_activity_til"
         app:layout_constraintBottom_toBottomOf="parent"
         android:layout_marginBottom="16dp"
         app:layout_constraintHorizontal_bias="0.0"
         app:layout_constraintVertical_bias="0.843" />
 />

</android.support.constraint.ConstraintLayout>
