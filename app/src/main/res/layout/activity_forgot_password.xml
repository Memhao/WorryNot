<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background720x1280"
    tools:context="licence.meme.worrynot.activities.MainActivity">

    <EditText
        android:id="@+id/email_forgot_password_activity_et"
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:background="@drawable/et1"
        android:hint="EMAIL"
        android:textAlignment="center"
        android:textColorHint="#AF5910"
        android:textStyle="bold"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/reset_forgot_password_activity_btn"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.941"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/reset_forgot_password_activity_btn"
        android:layout_width="205dp"
        android:layout_height="40dp"
        android:background="@drawable/button_custom"
        android:text="RESET PASSWORD"
        android:textAlignment="center"
        android:textColor="#21150f"
        android:textStyle="bold"
        android:layout_marginBottom="33dp"
        app:layout_constraintBottom_toTopOf="@+id/back_forgot_password_activity_btn"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/back_forgot_password_activity_btn"
        android:layout_width="205dp"
        android:layout_height="40dp"
        android:background="@drawable/button_custom"
        android:text="BACK..."
        android:textAlignment="center"
        android:textColor="#21150f"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="66dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>