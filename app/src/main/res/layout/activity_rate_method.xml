<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@drawable/background_rectangle"
    tools:context="licence.meme.worrynot.gui.screen.worrynotstore.RateMethodActivity">

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:numStars="5"
        android:stepSize="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:id="@+id/rate_method_activity_rb" />
    <Button
        android:id="@+id/submit_rate_method_activity_btn"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginLeft="42dp"
        android:text="RATE !"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="42dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/rate_method_activity_rb"
        app:layout_constraintVertical_bias="0.018" />
</android.support.constraint.ConstraintLayout>
