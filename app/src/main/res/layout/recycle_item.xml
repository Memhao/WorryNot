<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_recycle_item_ll"
    android:orientation="horizontal"
    android:gravity="center_vertical|left"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:paddingLeft="16dp"
    android:clickable="true"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/icon_recycle_item_iv"
        android:src="@mipmap/ic_launcher"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/title_recycle_item_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:layout_alignTop="@+id/icon_recycle_item_iv"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="48dp"
        android:textColor="@android:color/black"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:maxLines="1"
        android:textSize="16sp"
        android:text="Method name"
    />

    <TextView
        android:id="@+id/author_recycle_item_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:layout_below="@+id/title_recycle_item_tv"
        android:text="Yello Jakarta"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="48dp"
        android:textColor="@android:color/black"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:maxLines="1"
        android:textSize="16sp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#111"
        android:id="@+id/line_recycle_item_not"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/author_recycle_item_tv"
        >

    </View>
</RelativeLayout>