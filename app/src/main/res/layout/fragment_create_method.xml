<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_rectangle"
    tools:context="licence.meme.worrynot.fragments.CreateMethodFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title_create_method_fragment_tv"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="Create a WorryNot by yourself"
            android:textColor="#111111"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/name_create_method_fragment_tv"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:text="Name it!"
            android:textColor="#111111"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/title_create_method_fragment_tv" />
        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            app:counterEnabled="true"
            app:counterMaxLength="30"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@color/colorAccent"
            android:id="@+id/name_container_create_method_fragment_til"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/name_create_method_fragment_tv">
            <EditText
                android:id="@+id/name_create_method_fragment_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:hint="Name"
                android:inputType="textCapSentences|textMultiLine"
                tools:layout_editor_absoluteX="-39dp"
                tools:layout_editor_absoluteY="194dp" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/description_create_method_fragment_tv"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:text="Describe it!"
            android:textColor="#111111"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/name_container_create_method_fragment_til" />
        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            app:counterEnabled="true"
            app:counterMaxLength="90"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@color/colorAccent"
            android:id="@+id/description_container_create_method_fragment_til"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/description_create_method_fragment_tv">
            <EditText
                android:id="@+id/description_create_method_fragmnet_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:hint="Description"
                android:inputType="textCapSentences|textMultiLine"
                tools:layout_editor_absoluteX="-39dp"
                tools:layout_editor_absoluteY="194dp" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/story_create_method_fragment_tv"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:text="Story it!"
            android:textColor="#111111"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/description_container_create_method_fragment_til" />
        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            app:counterEnabled="true"
            app:counterMaxLength="90"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@color/colorAccent"
            android:id="@+id/story_container_create_method_fragment_til"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/story_create_method_fragment_tv">
            <EditText
                android:id="@+id/story_create_method_fragmnet_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:hint="Stroy"
                android:inputType="textCapSentences|textMultiLine"
                tools:layout_editor_absoluteX="-39dp"
                tools:layout_editor_absoluteY="194dp" />
        </android.support.design.widget.TextInputLayout>
    </android.support.constraint.ConstraintLayout>


</FrameLayout>
