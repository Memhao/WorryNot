<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_row_method_rl"
    android:orientation="horizontal"
    android:gravity="center_vertical|left"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:paddingLeft="16dp"
    android:clickable="true"
    >

    <ImageView
        android:id="@+id/icon_row_method_iv"
        android:src="@drawable/rsz_11logo"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/title_row_method_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/icon_row_method_iv"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="48dp"
        android:textColor="@android:color/black"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:maxLines="1"
        android:textSize="16sp"
        android:text="Method name"
        />

    <TextView
        android:id="@+id/author_row_method_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_recycle_item_tv"
        android:text="Yello Jakarta"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="48dp"
        android:textColor="@android:color/black"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:maxLines="1"
        android:textSize="16sp"
        />
    <ImageView
        android:id="@+id/activate_method_row_method_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="16dp"
        android:clickable="true"
        android:src="@drawable/ic_check_circle_black_24dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@+id/activate_method_row_method_iv"
        />
</RelativeLayout>