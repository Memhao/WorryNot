<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background720x1280_plain"
    tools:context="licence.meme.worrynot.activities.ResetPasswordActivity">


        <TextView
            android:id="@+id/title_activity_reset_password_tv"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text=" \n           Change passowrd "
            android:textColor="#FFFFFF"
            android:background="@drawable/et2"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/email_activity_reset_password_et"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:hint="                 email"
            android:textColorHint="#FFFFFF"
            android:background="@drawable/et1"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="37dp"
            app:layout_constraintTop_toBottomOf="@+id/title_activity_reset_password_tv" />

        <EditText
            android:id="@+id/old_password_activity_reset_password_et"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:hint="         old password"
            android:textColorHint="#FFFFFF"
            android:background="@drawable/et1"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="38dp"
            app:layout_constraintTop_toBottomOf="@+id/email_activity_reset_password_et" />

        <EditText
            android:id="@+id/new_password_activity_reset_password_et"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:hint="         new password"
            android:textColorHint="#FFFFFF"
            android:background="@drawable/et1"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/old_password_activity_reset_password_et"
            android:layout_marginLeft="60dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0" />
        <Button
            android:id="@+id/send_mail_activity_reset_password_btn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/button0"
            android:text="RESET"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/new_password_activity_reset_password_et" />
        <TextView
            android:id="@+id/feedback_activity_reset_password_tv"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/et2"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/send_mail_activity_reset_password_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" />

</android.support.constraint.ConstraintLayout>
