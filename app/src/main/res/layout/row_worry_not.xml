<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:paddingLeft="16dp"
    android:clickable="true">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/icon_row_worry_not_iv"
        android:src="@mipmap/ic_launcher"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />
    <TextView
        android:id="@+id/name_worry_not_row_tv"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:background="@color/colorAccent"
        android:textColor="@android:color/black"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:maxLines="1"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/icon_row_worry_not_iv"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toLeftOf="@+id/activate_worry_not_row_iv"
        android:layout_marginRight="16dp" />
    <TextView
        android:id="@+id/author_worry_not_row_tv"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:background="@color/colorAccent"
        android:textColor="@android:color/black"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:maxLines="1"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/icon_row_worry_not_iv"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/name_worry_not_row_tv"
        app:layout_constraintRight_toLeftOf="@+id/activate_worry_not_row_iv"
        android:layout_marginRight="16dp" />
    <ImageView
        android:id="@+id/publish_worry_not_row_iv"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:clickable="true"
        android:background="@drawable/ic_cloud_upload_black_24dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />
    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:clickable="true"
        android:background="@drawable/ic_flash_on_black_24dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:id="@+id/activate_worry_not_row_iv"
        app:layout_constraintRight_toLeftOf="@+id/publish_worry_not_row_iv"
        android:layout_marginRight="16dp" />

    <View
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:background="#111"
        android:id="@+id/line_row_worry_not"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/author_worry_not_row_tv">

    </View>
</android.support.constraint.ConstraintLayout>