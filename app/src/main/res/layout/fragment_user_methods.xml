<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_rectangle"
    tools:context="licence.meme.worrynot.fragments.UserMethodsFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/title_fragment_user_method_tv"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="#111111"
            android:gravity="center_vertical"
            android:minLines="3"
            android:text="Choose the method that fit you ! "
            android:textAlignment="center"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/methods_user_methods_fragment_rv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/title_fragment_user_method_tv"></android.support.v7.widget.RecyclerView>


        <TextView
            android:id="@+id/selected_method_user_methods_fragment_tv"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="#111111"
            android:gravity="center_vertical"
            android:minLines="4"
            android:textAlignment="center"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/methods_user_methods_fragment_rv"
            app:layout_constraintHorizontal_bias="0.0" />
        <Button
            android:id="@+id/set_active_user_methods_fragment_btn"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:background="@color/colorPrimaryDark"
            android:text="ACTIVATE WORRYNOT !"
            android:textAlignment="center"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@+id/selected_method_user_methods_fragment_tv"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.219" />
    </android.support.constraint.ConstraintLayout>

</FrameLayout>
