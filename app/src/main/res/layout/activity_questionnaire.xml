<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_rectangle"
    tools:context="licence.meme.worrynot.gui.screen.home.QuestionnaireActivity">
<TextView
    android:layout_width="0dp"
    android:layout_height="36dp"
    android:background="@color/colorAccent"
    android:text="Questionnnaire"
    android:textAlignment="center"
    android:textColor="#111111"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="16dp"
    android:layout_marginLeft="16dp"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginRight="16dp"
    app:layout_constraintRight_toRightOf="parent"
    android:id="@+id/title_questionnaire_activity_tv" />

    <Button
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:id="@+id/submit_questionnaire_activity_btn"
        android:background="@drawable/button_scheme"
        android:text="SUBMIT"
        android:textColor="#111111"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/questions_activity_questionnaire_lv"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />
    <Button
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:id="@+id/back_questionnaire_activity_btn"
        android:background="@drawable/button_scheme"
        android:text="BACK"
        android:textColor="#000000"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/submit_questionnaire_activity_btn"
        app:layout_constraintVertical_bias="0.733" />
    <ListView
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_questionnaire_activity_tv"
        android:id="@+id/questions_activity_questionnaire_lv"></ListView>
</android.support.constraint.ConstraintLayout>
